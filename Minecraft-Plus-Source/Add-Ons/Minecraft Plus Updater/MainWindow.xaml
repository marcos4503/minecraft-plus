<Window x:Class="Minecraft_Plus_Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minecraft_Plus_Updater"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Minecraft+ Updater" Background="{x:Null}" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight" Topmost="True" WindowStartupLocation="CenterScreen" Foreground="{x:Null}" WindowStyle="None" AllowsTransparency="True">
    <Window.Resources>
        <Storyboard x:Key="ghastFloating" RepeatBehavior="Forever">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="ghastGif" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <EasingThicknessKeyFrame KeyTime="00:00:00" Value="670,180,0,0"/>
                <EasingThicknessKeyFrame KeyTime="00:00:01.2" Value="670,195,0,0"/>
                <EasingThicknessKeyFrame KeyTime="00:00:02.2" Value="670,180,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Grid Width="1000" Height="450">
        <Image x:Name="logo" Width="700" Source="/Resources/minecraft-je.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image x:Name="ghastGif" gif:ImageBehavior.AnimatedSource="/Resources/happy-ghast.gif" gif:ImageBehavior.AnimationSpeedRatio="1.5" Width="150" Height="150" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="670,180,0,0">
            <Image.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource ghastFloating}" />
                </EventTrigger>
            </Image.Triggers>
        </Image>
        <Image x:Name="allayGif" gif:ImageBehavior.AnimatedSource="/Resources/allay.gif" gif:ImageBehavior.AnimationSpeedRatio="1.5" Width="150" Height="150" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-680,-180,0,0" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
